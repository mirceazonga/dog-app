<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      
      <%= form_with(model: @dog, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "name of dog" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :motto, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :motto, rows: 10, class: "form-control shadow rounded", placeholder: "motto" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
           
           
           
         
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', dogs_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>